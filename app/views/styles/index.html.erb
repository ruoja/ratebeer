<h1>Listing Styles</h1>

<table>
  <thead>
    <tr>
      <th>Beer style</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= style.name %></td>
        <td><%= link_to 'Show', style %></td>
      </tr>
    <% end %>
  </tbody>
</table>

