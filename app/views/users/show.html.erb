<p id="notice"><%= notice %></p>

<h2><%= @user.username %></h2>

<p>	
	<% unless @user.ratings.empty? %>
		Has <%= pluralize(@user.ratings.count, 'rating') %>, average: <%= @user.average_rating %>
	<% else %>
		Has no ratings yet
	<% end %>	
</p>
<p>	
	<% unless @user.ratings.empty? %>
		favourite beer: <%= @user.favourite_beer %><br>
		favourite style: <%= @user.favourite_style %><br>
		favourite brewery: <%= @user.favourite_brewery %>
	<% end %>	
</p>

<p>
	<% unless @user.memberships.empty? %>
	member of <% @user.memberships.each do |membership| %> | 
	<%= link_to membership.beer_club.name, beer_club_path(membership.beer_club) %>
		<% end %>
	<% else %>
		no beer club memberships
	<% end %>	
</p>

<ul>
	<% @user.ratings.each do |rating| %>
		<li>
			<%= rating %>
				<% if @user == current_user %>
				 	<%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
		</li>
	<% end %>
</ul>	 

<% if current_user == @user %>
	<%= link_to 'Edit', edit_user_path(@user) %> |
	<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
