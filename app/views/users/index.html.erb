<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %>
          <% if current_user && current_user.admin && user.banned %>
              <span class="label label-info">frozen account</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
