<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> Username </th>
      <th> Rated Beers </th>
      <th> Total Ratings </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
        <td>
          <% if current_user && current_user.admin && user.banned %>
              <span class="label label-info">frozen account</span>        
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
