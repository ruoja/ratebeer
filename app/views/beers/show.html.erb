<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
	<% if @beer.ratings.empty? %>
	  No ratings yet!
	<% else %>  
	  Has <%= pluralize(@beer.ratings.count, 'rating') %>, average <%= @beer.average_rating %>
	<% end %>  
</p>

<% if current_user %>
  <%= link_to 'Edit', edit_beer_path(@beer) %> |
  <%= link_to 'Destroy', beer_path(@beer), method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>  
<%= link_to 'Back', beers_path %>
