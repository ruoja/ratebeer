<p id="notice"><%= notice %></p>

<h2>
  <%= @brewery.name %>
</h2>

<p>
  <i>Established in: </i><%= @brewery.year %>
</p>

<p>
  Number of beers: <%= @brewery.beers.count %>
</p>

<p><ul>
  <% @brewery.beers.each do |beer| %>
    <li><%= link_to beer.name, beer %></li>
  <% end %>
</ul></p> 

<p>
	<% if @brewery.ratings.empty? %>
		No ratings yet!
	<% else %>	
		Has <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= @brewery.average_rating %>
	<% end %>
</p>  

<% if current_user %>
  <%= link_to 'Edit', edit_brewery_path(@brewery) %> |
  <%= link_to 'Destroy', brewery_path(@brewery), method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', breweries_path %>

