<h2>
  <%= @brewery.name %>
  <% if @brewery.active %>
    <span class="label label-info">active</span>
  <% else %>
    <span class="label label-info">retired</span>
  <% end %>
  <%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-warning" %>
</h2>

<p>
  <i>Established in: </i>
  <%= @brewery.year %>
</p>

<p>
  Number of beers: <%= @brewery.beers.count %>
</p>

<p><ul>
  <% @brewery.beers.each do |beer| %>
    <li><%= link_to beer.name, beer %></li>
  <% end %>
</ul></p> 

<p>
	<% if @brewery.ratings.empty? %>
		No ratings yet!
	<% else %>	
		Has <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= round(@brewery.average_rating) %>
	<% end %>
</p>  

<%= edit_and_destroy_buttons(@brewery) %>

