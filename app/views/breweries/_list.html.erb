<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sortable 'name' %></th>
      <th><%= sortable 'year' %></th>
    </tr>
  </thead>

  <tbody>
    <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td class=><%= brewery.year %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
